#include <iostream>

int main()
{
    int x,y,r,a,b;
    
    printf("please input int x:");
    scanf("%d",&x);
    printf("please input int y:");
    scanf("%d",&y);
    printf("please input int r:");
    scanf("%d",&r);
    printf("please input int a:");
    scanf("%d",&a);
    b = x;
    if(x<y && x<r && x<a){
        b = x;
    }
    else if(y<r && y<a && y<x){
        b = y;
    }
    else if(r<a && r<x && r<y){
        b = r;
    }
    else if(a<r && a<x && a<y){
        b = a;
    }
    
    printf("The smallest number is: %d\n",b);
    return 0;
}
