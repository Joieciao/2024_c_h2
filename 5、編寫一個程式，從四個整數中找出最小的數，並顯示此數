/*
5、編寫一個程式，從四個整數中找出最小的數，並顯示此數
*/
#include <iostream>
int main()
{
    int a1,a2,a3,a4,min_v;
    int i,a[4];
    printf("please input a integer");
    scanf("%d",&a1);
    printf("please input a integer");
    scanf("%d",&a2);    
    if(a1>a2){
        min_v = a2;
    }else{
        min_v = a1;
    }
    printf("please input a integer");
    scanf("%d",&a3);  
    if(a3>min_v){
        min_v = min_v;
    }else{
        min_v = a3;
    }
    printf("please input a integer");
    scanf("%d",&a4);
    if(a4>min_v){
        min_v = min_v;
    }else{
        min_v = a4;
    }
    printf("number a1 = %d\n",a1);
    printf("number a2 = %d\n",a2);
    printf("number a3 = %d\n",a3);
    printf("number a4 = %d\n",a4);
    printf("minmun number = %d\n",min_v);
    
    
    return 0;
}
